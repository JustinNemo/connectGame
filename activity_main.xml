<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/board"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="3">


        <ImageView
            android:id="@+id/redImageView1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="7dp"
            android:onClick="dropIn"
            android:tag="0" />

        <ImageView
            android:id="@+id/redImageView2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="7dp"
            android:layout_marginBottom="8dp"
            android:onClick="dropIn"
            android:tag="1" />

        <ImageView
            android:id="@+id/redImageView3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="7dp"
            android:layout_marginBottom="8dp"
            android:onClick="dropIn"
            android:tag="2" />

        <ImageView
            android:id="@+id/redImageView4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="7dp"
            android:onClick="dropIn"
            android:tag="3" />

        <ImageView
            android:id="@+id/redImageView5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="7dp"
            android:onClick="dropIn"
            android:tag="4" />

        <ImageView
            android:id="@+id/redImageView6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="7dp"
            android:onClick="dropIn"
            android:tag="5" />

        <ImageView
            android:id="@+id/redImageView7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="7dp"
            android:onClick="dropIn"
            android:tag="6" />

        <ImageView
            android:id="@+id/redImageView8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="7dp"
            android:onClick="dropIn"
            android:tag="7" />

        <ImageView
            android:id="@+id/redImageView9"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="7dp"
            android:onClick="dropIn"
            android:tag="8" />

    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/restartButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="97dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:onClick="playAgain"
        android:text="Play Again!!"
        android:textColor="@android:color/background_dark"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/winnerTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="32dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
